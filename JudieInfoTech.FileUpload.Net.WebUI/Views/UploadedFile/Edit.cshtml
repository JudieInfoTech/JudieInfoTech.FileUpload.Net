@model  JudieInfoTech.FileUpload.Net.WebUI.Controllers.Models.UploadedFileModel  
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="frmcrud" asp-controller="UploadedFile" asp-action="Edit" method="post" class="form-horizontal" enctype="multipart/form-data">
  @Html.AntiForgeryToken()
  <input asp-for=RowVersion type="hidden" />
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="modal-body">

      <div class="form-group" >
          <label asp-for=Id hidden  ></label>
          <div class="col-md-9">
              <input asp-for=Id  type="text" hidden  />
              <span asp-validation-for=Id class="text-danger"></span>
          </div>
      </div>

      <div class="form-group">
          <label asp-for=ImageFilename class="control-label col-md-3"></label>
          <div class="col-md-9">
              <input asp-for=ImageFilename class="form-control input-md" type="text"  />
              <span asp-validation-for=ImageFilename class="text-danger"></span>
          </div>
      </div>

      <div class="form-group">
          <label asp-for=Comments class="control-label col-md-3"></label>
          <div class="col-md-9">
              <input asp-for=Comments class="form-control" />
              <span asp-validation-for=Comments class="text-danger"></span>
          </div>
      </div>

      <div class="form-group">
          <label asp-for=ImageFilePath class="control-label col-md-3"></label>
          <div class="col-md-9">
              <input asp-for=ImageFilePath class="form-control" />
              <span asp-validation-for=ImageFilePath class="text-danger"></span>
          </div>
      </div>
      <div class="form-group">
          <label asp-for=FileToUpload class="control-label col-md-3"></label>
          <div class="col-md-9">
              <input asp-for=FileToUpload class="form-control" type="file" />
              <span asp-validation-for=FileToUpload class="text-danger"></span>              
          </div>
      </div>
  </div>
</form>

